<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.TeacherActivity">

    <ImageView
            android:layout_width="250dp"
            android:layout_height="279dp" app:srcCompat="@drawable/call"
            android:id="@+id/teacher_imrating" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.496"
            android:layout_marginTop="48dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Г.А.Аманова "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/teacher_imrating" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.531" android:textStyle="bold" android:textColor="@color/black"
            android:textSize="20sp"/>
    <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:id="@+id/ratingBar" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/name" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:numStars="5"
            app:layout_constraintHorizontal_bias="0.574"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/teacher_edittext"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar" android:hint="Group name"
            app:layout_constraintHorizontal_bias="0.571"/>
    <Button
            android:text="ГОЛОСОВАТЬ"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/teacer_button" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/teacher_edittext"
            app:layout_constraintHorizontal_bias="0.533"
            android:textColor="@color/black"
            android:textStyle="bold"/>
    <TextView
            android:text="Рейтинг Загружается..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rating_textview"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="16sp" android:textStyle="bold" android:textColor="@android:color/holo_green_light"/>
</android.support.constraint.ConstraintLayout>