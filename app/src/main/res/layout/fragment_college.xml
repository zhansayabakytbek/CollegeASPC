<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Fragment.CollegeFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
    >

        <android.support.v7.widget.CardView
                android:id="@+id/korpus_cardview"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">

            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">


                <TextView
                        android:text="Корпуса и общежития"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:id="@+id/textView2"
                        android:layout_marginTop="28dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="32dp"
                        android:layout_marginStart="32dp"/>
                <TextView
                        android:text="Адреса корпусов и общежития на карте"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:id="@+id/textView3"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="32dp"
                        android:layout_marginStart="32dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginTop="4dp"/>
                <ImageView
                        android:src="@drawable/ic_university_map"
                        android:layout_width="50dp"
                        android:layout_height="67dp"
                        android:id="@+id/imageView2"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="24dp"
                        android:layout_marginRight="24dp"/>
            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:id="@+id/vitual_cardview"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
         <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">
            <TextView
                    android:text="Виртуальная экскурсия"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"
                    android:id="@+id/textView7"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="32dp"
                    android:layout_marginStart="32dp"/>
            <TextView
                    android:text="Виртуальная экскурсия по АГПК"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView7"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="32dp"
                    android:layout_marginStart="32dp"/>
             <ImageView
                     android:src="@drawable/ic_augmented_reality"
                     android:layout_width="61dp"
                     android:layout_height="56dp"
                     android:id="@+id/imageView4"
                     app:layout_constraintEnd_toEndOf="parent"
                     android:layout_marginEnd="16dp"
                     android:layout_marginRight="16dp"
                     android:layout_marginTop="20dp"
                     app:layout_constraintTop_toTopOf="parent"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>





</LinearLayout>

</FrameLayout>